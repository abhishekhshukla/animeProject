<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/home/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="text">
                    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="rating" placeholder="Rating 1-5">
                </div>
                <div style="display: none;" class="form-group">
                    <input class="form-control" type="text" name="username" value=<%= currentUser.username%>>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                <input style="display: none;" type="text" name="animeId" value= <%= emp%> >
            </form>
            <a href="/home">Go Back</a>
        </div>
    </div>
</div>
